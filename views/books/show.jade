extends ../layout

block content
  .container
    nav.my-4(aria-label='breadcrumb', role='navigation')
      ol.breadcrumb
        li.breadcrumb-item
          a(href='/books') Home
        li.breadcrumb-item.active(aria-current='page') Book Details
    .row.my-4
      .col-lg-3
        include ../books/partials/book_image
      .col-lg-9
        h5
          | #{book.name}
        ul.unstyle
          li
            span Author :
            strong #{book.Author.name}
          li
            span Category :
            strong #{book.Category.name}
        p.card-text
          | #{book.description}
    .row.my-4
      .col
        h5
          | Read Book
        .canvas
          small Want to read the book ?
          a(href="/books/#{book.id}/view_pdf" , target="_blank") Click
          